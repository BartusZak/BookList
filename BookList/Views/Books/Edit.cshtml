@model BookList.Models.Book
@{
    ViewData["Title"] = "Edytuj";
}
<br />
<h2>Edytuj Książkę</h2>
<hr />

<form asp-action="Edit">
    <div class="row form-border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-sm-1">
                    <input asp-for="Name" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" value="Zapisz" class="btn btn-sm btn-primary" />
            <input type="submit" asp-action="Index" value="Wróc do listy książek" class="btn btn-sm btn-success" />
        </div>
    </div>
</form>

