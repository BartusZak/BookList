@model BookList.Models.Book
@{
    ViewData["Title"] = "Details";
}

<h2>Szczegóły</h2>
<hr />

<div class="row form-border">
    <div class="form-group">
        <div class="row">
            <div class="col-sm-1">
                <label asp-for="Name"></label>
            </div>
            <div class="col-sm-1">
                <input asp-for="Name" disabled class="form-control" />
            </div>
        </div>
    </div>
    <br />
    <div class="form-group">
       <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-primary">Edytuj</a>
       <a asp-action="Index" class="btn btn-sm btn-success">Wróć do listy książek</a>
    </div>
</div>


